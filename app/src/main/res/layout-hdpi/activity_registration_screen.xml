<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingHorizontal="28dp"

    tools:context=".Activities.RegistrationScreen">

    <TextView
        android:id="@+id/hey_there_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="@string/hey_there"
        android:textColor="#1D1617"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/create_acc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hey_there_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/create_an_account"
        android:textColor="#1D1617"
        android:textSize="27sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/firstNameContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/create_acc_txt"
        android:layout_marginTop="30dp"
        android:background="@drawable/edittext_bg">

        <ImageView
            android:id="@+id/icon1"
            android:layout_width="18dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:padding="1dp"
            android:src="@drawable/ic_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:textColorHint="#ADA4A5"
            android:autofillHints="name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/first_name"
            android:inputType="textPersonName"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon1"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lastNameContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/firstNameContainer"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_bg">

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="18dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:padding="1dp"
            android:src="@drawable/ic_profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:textColorHint="#ADA4A5"
            android:autofillHints="name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/last_name"
            android:inputType="textPersonName"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon2"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emailContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/lastNameContainer"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_bg">

        <ImageView
            android:id="@+id/icon3"
            android:layout_width="18dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:textColorHint="#ADA4A5"
            android:autofillHints="emailAddress"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/icon3"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pwdContainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/emailContainer"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext_bg">

        <ImageView
            android:id="@+id/icon4"
            android:layout_width="18dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/ic_lock"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:textColorHint="#ADA4A5"
            android:autofillHints="password"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:background="@null"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/eye"
            app:layout_constraintStart_toEndOf="@+id/icon4"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_marginEnd="20dp"
            android:id="@+id/eye"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_eye"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkbox"
        style="@style/CheckboxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwdContainer"
        android:layout_marginTop="10dp"
        android:checked="true"
        android:fontFamily="@font/poppins_regular"
        android:gravity="top"
        android:includeFontPadding="true"
        android:minHeight="48dp"
        android:padding="5dp"
        android:text="@string/accept_policy_txt"
        android:textColor="#F7F8F8"
        android:textSize="13sp"
        app:buttonTint="@color/white" />


    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/btnRegistration"
            android:background="@drawable/red_btn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="10">

            <View
                android:layout_width="0dp"
                android:layout_height="1.6dp"
                android:layout_weight="5"
                android:background="@drawable/horizontal_div_1" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:text="@string/or"
                android:textColor="#1D1617"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1.6dp"
                android:layout_weight="5"
                android:background="@drawable/horizontal_div_1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:background="@drawable/round_stroke_btn_white_bg"
                android:padding="20dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_google" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_stroke_btn_white_bg"
                android:padding="20dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_facebook" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/already_have_an_account"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="@color/primaryRed"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>